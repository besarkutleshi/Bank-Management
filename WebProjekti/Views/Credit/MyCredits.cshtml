@model List<Credits>
@{ 
    ViewBag.Title = "My Credits";
}
    <div class="container-fluid">
        <div class="row">
            @if (Model == null)
            {
                <div class="col-sm-12">
                    <h3 class="text-center text-danger">No Credit</h3>
                </div>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <h5>Credit Number : @item.CreditNumber</h5>
                                <a asp-action="CreditDetails" asp-controller="Credit" asp-route-id="@item.Id" class="btn btn-primary float-right">Details</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>