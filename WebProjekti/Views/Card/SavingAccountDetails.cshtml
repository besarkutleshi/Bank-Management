@model SavingAccounts
@{
    ViewBag.Title = "Details";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4">
                <div class="row">
                    <div class="col-sm-12" style="margin-bottom:15px">
                        <div class="card">
                            <div class="card-body">
                                <div class="text-center">
                                    <img lass="img-responsive center" src="~/Images/user-circle-solid.svg" width="100" height="100" />
                                </div>
                                <br />
                                <h5 class="text-center">Hello, @Model.Account.Client.Name @Model.Account.Client.Surname</h5>
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="col-sm-12" style="margin-bottom:15px">
                        <div class="card">
                            <div class="card-body">
                                <div class="text-center">
                                    <img class="img-responsive center" src="~/Images/wallet-solid (1).svg" width="100" height="100" />
                                </div>
                                <h3 class="text-center">$@Model.Account.Balance</h3>
                                <p class="text-center">Available Balance</p>
                                <hr />
                                <a asp-action="WithDrawal" asp-controller="Transaction" class="float-left text-success">Withdraw</a>
                                <a asp-action="Deposit" asp-controller="Transaction" class="float-right text-success">Deposit</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12" style="margin-bottom:15px">
                        <div class="card">
                            <div class="card-body">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">

            </div>
        </div>
    </div>