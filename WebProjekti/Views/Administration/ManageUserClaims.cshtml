@model UserClaimsModel
@{ 
    ViewBag.Title = "Manage User Claims";
    var UserId = ViewBag.UserId;
}

    <div class="container">
        <form method="post" asp-action="ManageUserClaims" asp-controller="Administration" asp-route-id="@UserId">
            <div class="card">
                <div class="card-header">
                    Manage User Claims
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Claims.Count; i++)
                    {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model.UserId" />
                        <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                        <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input">
                        <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">@Model.Claims[i].ClaimType</label>
                    </div>
                    }
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
                    <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@Model.UserId" class="btn btn-primary"
                       style="width:auto">Cancel</a>
                </div>
            </div>
        </form>
    </div>