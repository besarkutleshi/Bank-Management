@model RegisterViewModel
@{ 
    ViewBag.Title = "Register";
    Layout = null;
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Register</h5>
                    <form class="form-signin" method="post" action="register">
                        <div class="form-label-group">
                            <input type="email" id="inputEmail" class="form-control" asp-for="Email" placeholder="Enter Username" autofocus required>
                            <label for="inputEmail">Email</label>
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                        <div class="form-label-group">
                            <input type="password" id="inputPassword" class="form-control" asp-for="Password" placeholder="Enter Password" required>
                            <label for="inputPassword">Password</label>
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>

                        <div class="form-label-group">
                            <input type="password" id="confirminputPassword" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" required>
                            <label asp="confirminputPassword">Confrim Password</label>
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <hr class="my-4">
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Register</button>
                        <hr class="my-4">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>